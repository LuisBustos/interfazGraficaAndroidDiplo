<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tituloActivityDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Búsqueda de predicción"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="93dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloActivityDetail"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/buscaGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca genero"
        app:layout_constraintStart_toEndOf="@id/labelGenero"
        app:layout_constraintTop_toTopOf="@id/labelGenero"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/labelDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Duración"
        app:layout_constraintLeft_toLeftOf="@id/labelGenero"
        app:layout_constraintTop_toBottomOf="@id/labelGenero" />

    <TextView
        android:id="@+id/buscaDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca duración"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="93dp"
        app:layout_constraintTop_toTopOf="@id/labelDuracion"
        app:layout_constraintStart_toEndOf="@id/labelDuracion"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actor"
        app:layout_constraintLeft_toLeftOf="@id/labelGenero"
        app:layout_constraintTop_toBottomOf="@id/buscaDuracion" />


    <TextView
        android:id="@+id/buscaActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca Actor"
        app:layout_constraintTop_toTopOf="@id/labelActor"
        app:layout_constraintStart_toEndOf="@id/labelActor"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="95dp" />

    <TextView
        android:id="@+id/labelAnio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Año"
        app:layout_constraintLeft_toLeftOf="@id/labelGenero"
        app:layout_constraintTop_toBottomOf="@id/buscaActor" />

    <TextView
        android:id="@+id/buscaAio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca Año"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/labelAnio"
        app:layout_constraintTop_toTopOf="@id/labelAnio" />

    <TextView
        android:id="@+id/labelSugerencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Número de sugerencias"
        app:layout_constraintLeft_toLeftOf="@id/labelGenero"
        app:layout_constraintTop_toBottomOf="@id/buscaAio" />

    <TextView
        android:id="@+id/buscaSugerencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca sugerencias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/buscaActor"
        app:layout_constraintTop_toTopOf="@id/labelSugerencias" />

</androidx.constraintlayout.widget.ConstraintLayout>